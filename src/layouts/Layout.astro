const { title = "Ugurcan Yagiz" } = Astro.props;
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body>
    <header class="nav">
      <div class="container nav-inner">
        <a class="brand" href="/">Ugurcan Yagiz</a>

        <nav class="nav-links">
          <a href="/blog">Blog</a>
          <a href="/science">Science</a>
          <a href="/art">Art</a>
          <a href="/history">History</a>
          <a href="/about">About</a>
        </nav>

        <a class="btn primary" href="/blog">Read</a>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        © {new Date().getFullYear()} Ugurcan Yagiz · Built with Astro
      </div>
    </footer>
  </body>
</html>
