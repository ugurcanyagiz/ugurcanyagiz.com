---
import Layout from "../layouts/Layout.astro";

const videoId = "wupToqz1e2g";
const title = "JLOG! â€” Ugurcan";
const src =
  `https://www.youtube-nocookie.com/embed/${videoId}` +
  `?autoplay=1&mute=1&controls=0&rel=0&modestbranding=1&playsinline=1` +
  `&loop=1&playlist=${videoId}`;
---

<Layout title={title}>
  <section class="jlog">
    <div class="video-wrap" aria-label="JLOG video">
      <iframe
        src={src}
        title="JLOG video"
        allow="autoplay; encrypted-media; picture-in-picture"
        allowfullscreen
        loading="eager"
        referrerpolicy="strict-origin-when-cross-origin"
      />
    </div>
  </section>

  <style>
    /* No frame, free-floating center */
    .jlog{
      min-height: calc(100vh - 64px - 72px);
      display: grid;
      place-items: center;
      padding: 22px 18px 60px;
    }

    /* Responsive, centered, subtle Apple-like floating */
    .video-wrap{
      width: min(980px, 100%);
      aspect-ratio: 16 / 9;
      border-radius: 22px;
      overflow: hidden;
      background: rgba(255,255,255,0.65);
      box-shadow: 0 18px 60px rgba(0,0,0,.12);
    }

    iframe{
      width: 100%;
      height: 100%;
      border: 0;
      display: block;
    }

    @media (max-width: 520px){
      .jlog{ padding: 18px 12px 50px; }
      .video-wrap{ border-radius: 18px; }
    }
  </style>
</Layout>
