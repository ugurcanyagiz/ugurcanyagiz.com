---
import Layout from "../layouts/Layout.astro";

const audioSrc = "/audio/pale-blue-dot.mp3";
const storyImg = "/images/story-of-my-life.jpg"; // placeholder
---

<Layout title="JLOG! â€” Ugurcan">
  <main class="jlog">

    <!-- JLOG HEADER -->
    <header class="head">
      <p class="kicker">JLOG!</p>
    </header>

    <!-- AUDIO CARD -->
    <section class="card" aria-label="Audio recording">
      <div class="card-top">
        <div class="wave" aria-hidden="true">
          <svg viewBox="0 0 120 24" width="120" height="24">
            <path
              d="M2 12c6 0 6-8 12-8s6 16 12 16 6-16 12-16 6 16 12 16 6-16 12-16 6 16 12 16 6-16 12-16 6 8 12 8"
              fill="none"
              stroke="currentColor"
              stroke-width="2.2"
              stroke-linecap="round"
              opacity=".55"
            />
          </svg>
        </div>

        <div class="card-title">
          <div class="big">The Pale Blue Dot</div>
          <div class="small">Carl Sagan Â· Audio recording</div>
        </div>

        <a class="download" href={audioSrc} download>Download</a>
      </div>

      <div class="player">
        <button class="play" id="playBtn">â–¶</button>
        <div class="time" id="tNow">0:00</div>
        <input class="seek" id="seek" type="range" min="0" max="1000" value="0" />
        <div class="time" id="tDur">0:00</div>
        <button class="mute" id="muteBtn">ðŸ”ˆ</button>
      </div>

      <audio id="audio" preload="metadata" playsinline>
        <source src={audioSrc} type="audio/mpeg" />
      </audio>
    </section>

    <!-- STORY OF MY LIFE CARD -->
    <section class="story-card">
      <a href="/jlog/story-of-my-life" class="story-link">
        <div class="story-bg">
          <div class="story-title">story of my life</div>
        </div>
      </a>
    </section>

  </main>

  <style>
    .jlog{
      max-width: 1100px;
      margin: 0 auto;
      padding: 24px 18px 90px;
      display: grid;
      gap: 28px;
    }

    .head{
      text-align: center;
      padding-top: 12px;
    }

    .kicker{
      font-size: 12px;
      font-weight: 900;
      letter-spacing: .28em;
      text-transform: uppercase;
      color: rgba(11,11,15,.65);
    }

    /* STORY CARD */
    .story-card{
      max-width: 980px;
      margin: 0 auto;
    }

    .story-link{
      display: block;
      border-radius: 24px;
      overflow: hidden;
      text-decoration: none;
    }

    .story-bg{
      height: 320px;
      background:
        radial-gradient(1200px 600px at 20% 10%, rgba(88,86,214,.25), transparent 60%),
        radial-gradient(800px 400px at 80% 30%, rgba(52,199,89,.18), transparent 55%),
        linear-gradient(180deg, #0b0b12, #14141c);
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 30px 80px rgba(0,0,0,.35);
      transition: transform .4s ease, box-shadow .4s ease;
    }

    .story-link:hover .story-bg{
      transform: translateY(-2px);
      box-shadow: 0 40px 100px rgba(0,0,0,.45);
    }

    .story-title{
      color: rgba(255,255,255,.92);
      font-size: 34px;
      font-weight: 800;
      letter-spacing: -0.02em;
      text-transform: lowercase;
    }

    @media (max-width: 520px){
      .story-bg{ height: 220px; }
      .story-title{ font-size: 26px; }
    }
  </style>

  <!-- AUDIO SCRIPT (AYNI KALIYOR, KISALTTIM) -->
  <script is:inline>
    const audio = document.getElementById("audio");
    const playBtn = document.getElementById("playBtn");
    const muteBtn = document.getElementById("muteBtn");
    const seek = document.getElementById("seek");
    const tNow = document.getElementById("tNow");
    const tDur = document.getElementById("tDur");

    const fmt = s => `${Math.floor(s/60)}:${String(Math.floor(s%60)).padStart(2,"0")}`;

    audio.addEventListener("timeupdate", () => {
      tNow.textContent = fmt(audio.currentTime || 0);
      tDur.textContent = fmt(audio.duration || 0);
      seek.value = audio.duration ? (audio.currentTime / audio.duration) * 1000 : 0;
    });

    playBtn.onclick = async () => audio.paused ? audio.play() : audio.pause();
    muteBtn.onclick = () => audio.muted = !audio.muted;
    seek.oninput = () => audio.currentTime = (seek.value / 1000) * audio.duration;
  </script>
</Layout>
