---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Science — Ugurcan">
  <section class="science-wrap">
    <h1 class="page-title">Science</h1>

    <div class="card-list">
      <article class="science-card">
        <div class="card-icon">
          <img
            src="https://images.unsplash.com/photo-1535930749574-1399327ce78f?w=200&q=80"
            alt="Albert Einstein"
            loading="lazy"
          />
        </div>

        <div class="card-text">
          <h2>Einstein & Relativity</h2>
          <p>
            Imagine time and space are not fixed, like lines on a ruler, but
            flexible — like a soft blanket that bends when something heavy
            sits on it...
          </p>
        </div>
      </article>
    </div>
  </section>

  <style>
    .science-wrap {
      max-width: 880px;
      margin: 0 auto;
      padding: 48px 18px 80px;
    }

    .page-title {
      font-size: 42px;
      font-weight: 800;
      letter-spacing: -0.03em;
      margin-bottom: 32px;
    }

    .card-list {
      display: flex;
      flex-direction: column;
      gap: 14px;
    }

    .science-card {
      display: flex;
      align-items: flex-start;
      gap: 14px;
      padding: 16px 18px;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 18px;
      border: 1px solid rgba(0, 0, 0, 0.06);
      box-shadow: 0 8px 28px rgba(0, 0, 0, 0.06);
      transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .science-card:hover {
      transform: translateY(-1px);
      box-shadow: 0 12px 36px rgba(0, 0, 0, 0.08);
    }

    .card-icon {
      width: 46px;
      height: 46px;
      flex-shrink: 0;
      border-radius: 12px;
      overflow: hidden;
      background: #eaeaec;
    }

    .card-icon img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .card-text h2 {
      margin: 0;
      font-size: 16px;
      font-weight: 700;
      color: #0b0b0f;
    }

    .card-text p {
      margin: 6px 0 0;
      font-size: 14px;
      line-height: 1.55;
      color: rgba(11, 11, 15, 0.62);
    }

    @media (max-width: 480px) {
      .page-title {
        font-size: 34px;
      }
    }
  </style>
</Layout>
