<Layout title="Science — Ugurcan">
  <section class="science-wrap">
    <h1 class="page-title">Science</h1>
    <p class="page-subtitle">
      Universe, mind, quantum, life — explained simply, without losing the truth.
    </p>

    <div class="card-list">
      {cards.map((c) => (
        <a class="science-card" href={c.href}>
          <div class="card-icon">
            <img src={c.img} alt={c.title} loading="lazy" />
          </div>

          <div class="card-text">
            <h2>{c.title}</h2>
            <p>{c.excerpt}</p>
          </div>
        </a>
      ))}
    </div>
  </section>

  <style>
    .science-wrap {
      max-width: 880px;
      margin: 0 auto;
      padding: 48px 18px 80px;
    }

    .page-title {
      font-size: 42px;
      font-weight: 800;
      letter-spacing: -0.03em;
      margin: 0 0 10px;
    }

    .page-subtitle{
      margin: 0 0 26px;
      font-size: 14px;
      line-height: 1.55;
      color: rgba(11, 11, 15, 0.62);
      max-width: 62ch;
    }

    .card-list {
      display: flex;
      flex-direction: column;
      gap: 14px;
    }

    .science-card {
      display: flex;
      align-items: flex-start;
      gap: 14px;
      padding: 16px 18px;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 18px;
      border: 1px solid rgba(0, 0, 0, 0.06);
      box-shadow: 0 8px 28px rgba(0, 0, 0, 0.06);
      transition: transform 0.15s ease, box-shadow 0.15s ease;
      text-decoration: none;
    }

    .science-card:hover {
      transform: translateY(-1px);
      box-shadow: 0 12px 36px rgba(0, 0, 0, 0.08);
    }

    .card-icon {
      width: 46px;
      height: 46px;
      flex-shrink: 0;
      border-radius: 12px;
      overflow: hidden;
      background: #eaeaec;
    }

    .card-icon img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display:block;
    }

    .card-text h2 {
      margin: 0;
      font-size: 16px;
      font-weight: 800;
      color: #0b0b0f;
    }

    .card-text p {
      margin: 6px 0 0;
      font-size: 14px;
      line-height: 1.55;
      color: rgba(11, 11, 15, 0.62);
    }

    @media (max-width: 480px) {
      .page-title { font-size: 34px; }
    }
  </style>
</Layout>
