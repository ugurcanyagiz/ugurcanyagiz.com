  {
    title: "Science",
    description: "Unlocking the secrets of the universe",
    image: "https://images.unsplash.com/photo-1636466497217-26a8cbeaf0aa?w=800&q=80",
    href: "/science"
  },
  {
    title: "Art",
    description: "Exploring human creativity",
    image: "https://images.unsplash.com/photo-1460661419201-fd4cecdf8a8b?w=800&q=80",
    href: "/art"
  },
  {
    title: "History",
    description: "Journey from past to future",
    image: "https://images.unsplash.com/photo-1461360228754-6e81c478b882?w=800&q=80",
    href: "/history"
  },
  {
    title: "Technology",
    description: "Innovations shaping tomorrow",
    image: "https://images.unsplash.com/photo-1518770660439-4636190af475?w=800&q=80",
    href: "/technology"
  },
  {
    title: "JLOG",
    description: "Personal writings and thoughts",
    image: "https://images.unsplash.com/photo-1455390582262-044cdead277a?w=800&q=80",
