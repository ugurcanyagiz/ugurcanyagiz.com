---
import Layout from "../layouts/Layout.astro";
import FilterBar from "../components/FilterBar.astro";

/**
 * Future categories (filters)
 * Keep the strings consistent in:
 * - filters array
 * - card.category
 * - badge--CATEGORY class names
 */
const filters = ["ALL", "AI", "BIOTECH", "SPACE", "ENERGY", "COMPUTING", "SOCIETY", "ROBOTICS"];

const cards = [
  {
    href: "/future/ai-agents",
    category: "AI",
    subtitle: "Workflows • Autonomy",
    title: "AI Agents: From Tools to Teammates",
    excerpt:
      "The next wave isn’t just chat — it’s agents that plan, call tools, verify, and hand you finished work (with receipts).",
    img: "https://images.unsplash.com/photo-1526378722484-bd91ca387e72?w=200&q=80",
  },
  {
    href: "/future/longevity-biotech",
    category: "BIOTECH",
    subtitle: "Aging • Prevention",
    title: "Longevity: Treating Aging Like an Engineering Problem",
    excerpt:
      "Instead of waiting for disease, biotech is moving toward monitoring and repairing the body early — like maintenance for biology.",
    img: "https://images.unsplash.com/photo-1581092334651-ddf26d9a09d1?w=200&q=80",
  },
  {
    href: "/future/space-economy",
    category: "SPACE",
    subtitle: "Launch costs • Industry",
    title: "The Space Economy: When Orbit Becomes a Workplace",
    excerpt:
      "Cheaper launch and better robotics could turn orbit into a factory floor — communications, materials, energy, and research.",
    img: "https://images.unsplash.com/photo-1446776811953-b23d57bd21aa?w=200&q=80",
  },
  {
    href: "/future/fusion-and-grid",
    category: "ENERGY",
    subtitle: "Fusion • Storage",
    title: "Energy: Fusion, Storage, and the Smarter Grid",
    excerpt:
      "Even before fusion arrives, batteries + software can reshape the grid — balancing supply and demand in real time.",
    img: "https://images.unsplash.com/photo-1509395176047-4a66953fd231?w=200&q=80",
  },
  {
    href: "/future/quantum-post-crypto",
    category: "COMPUTING",
    subtitle: "Quantum • Security",
    title: "Quantum Computing: Powerful, But Not Magic",
    excerpt:
      "Quantum won’t replace normal computers. It will crush specific problems — and force the world to upgrade encryption.",
    img: "https://images.unsplash.com/photo-1531297484001-80022131f5a1?w=200&q=80",
  },
  {
    href: "/future/robots-at-home",
    category: "ROBOTICS",
    subtitle: "Dexterity • Cost curves",
    title: "Robots at Home: The Hardest Product Challenge",
    excerpt:
      "Home robots need safe strength, good hands, and common sense — the last 10% is the toughest, but progress is real.",
    img: "https://images.unsplash.com/photo-1485827404703-89b55fcc595e?w=200&q=80",
  },
  {
    href: "/future/society-trust",
    category: "SOCIETY",
    subtitle: "Identity • Truth",
    title: "Trust in the AI Era: Proving What’s Real",
    excerpt:
      "As synthetic media grows, society will rely more on verification: provenance, signatures, and transparent evidence trails.",
    img: "https://images.unsplash.com/photo-1521737604893-d14cc237f11d?w=200&q=80",
  },
];
---

<Layout title="Future — Ugurcan">
  <FilterBar
    slot="subnav"
    filters={filters}
    cardSelector=".future-card"
    queryKey="topic"
    defaultFilter="ALL"
  />

  <section class="future-wrap">
    <div class="hero">
      <h1 class="page-title">Future</h1>
      <p class="page-subtitle">
        The next decade, explained without hype — what changes, what stays hard, and what matters most.
      </p>
    </div>

    <div class="card-list">
      {cards.map((c) => (
        <a class="future-card" href={c.href} data-category={c.category}>
          <div class="card-icon">
            <img src={c.img} alt={c.title} loading="lazy" />
          </div>

          <div class="card-text">
            <div class="subtitle-row">
              <span class="subtitle">{c.subtitle}</span>
            </div>
            <h2>{c.title}</h2>
            <p>{c.excerpt}</p>
          </div>

          <span class={`badge badge--${c.category}`} aria-label={`Category ${c.category}`}>
            {c.category}
          </span>
        </a>
      ))}
    </div>
  </section>

  <style>
    .future-wrap{
      max-width: 880px;
      margin: 0 auto;
      padding: 28px 18px 80px;
    }

    .page-title{
      font-size: 42px;
      font-weight: 800;
      letter-spacing: -0.03em;
      margin: 0 0 10px;
    }

    .page-subtitle{
      margin: 0 0 18px;
      font-size: 14px;
      line-height: 1.55;
      color: rgba(11,11,15,0.62);
      max-width: 66ch;
    }

    .card-list{
      display:flex;
      flex-direction: column;
      gap: 14px;
      margin-top: 10px;
    }

    .future-card{
      position: relative;
      display:flex;
      align-items:flex-start;
      gap: 14px;
      padding: 16px 18px;
      background: rgba(255,255,255,0.9);
      border-radius: 18px;
      border: 1px solid rgba(0,0,0,0.06);
      box-shadow: 0 8px 28px rgba(0,0,0,0.06);
      transition: transform 0.15s ease, box-shadow 0.15s ease;
      text-decoration:none;
      overflow:hidden;
    }

    .future-card:hover{
      transform: translateY(-1px);
      box-shadow: 0 12px 36px rgba(0,0,0,0.08);
    }

    .card-icon{
      width: 46px;
      height: 46px;
      flex-shrink:0;
      border-radius: 12px;
      overflow:hidden;
      background:#eaeaec;
    }

    .card-icon img{
      width:100%;
      height:100%;
      object-fit: cover;
      display:block;
    }

    .card-text{
      min-width: 0;
      padding-right: 108px;
    }

    .subtitle-row{ margin-bottom: 6px; }

    .subtitle{
      font-size: 12px;
      font-weight: 700;
      color: rgba(11,11,15,0.55);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 100%;
    }

    .card-text h2{
      margin:0;
      font-size: 16px;
      font-weight: 800;
      color:#0b0b0f;
    }

    .card-text p{
      margin: 6px 0 0;
      font-size: 14px;
      line-height: 1.55;
      color: rgba(11,11,15,0.62);
    }

    .badge{
      position:absolute;
      top: 14px;
      right: 14px;
      padding: 7px 10px;
      border-radius: 999px;
      font-size: 11px;
      font-weight: 900;
      letter-spacing: .14em;
      text-transform: uppercase;
      border: 1px solid rgba(0,0,0,0.08);
      backdrop-filter: blur(10px);
      user-select:none;
    }

    /* Muted Apple-like category colors */
    .badge--AI{        background: rgba(0,122,255,.14);  color: rgba(0,122,255,.95);  border-color: rgba(0,122,255,.20); }
    .badge--BIOTECH{   background: rgba(52,199,89,.14);  color: rgba(30,150,70,.95);  border-color: rgba(52,199,89,.22); }
    .badge--SPACE{     background: rgba(88,86,214,.14);  color: rgba(88,86,214,.95);  border-color: rgba(88,86,214,.20); }
    .badge--ENERGY{    background: rgba(255,149,0,.14);  color: rgba(255,149,0,.95);  border-color: rgba(255,149,0,.22); }
    .badge--COMPUTING{ background: rgba(175,82,222,.14); color: rgba(175,82,222,.95); border-color: rgba(175,82,222,.22); }
    .badge--SOCIETY{   background: rgba(142,142,147,.16); color: rgba(60,60,67,.80); border-color: rgba(142,142,147,.22); }
    .badge--ROBOTICS{  background: rgba(255,45,85,.14);  color: rgba(255,45,85,.92);  border-color: rgba(255,45,85,.22); }

    /* FilterBar toggles this */
    .future-card.is-hidden{ display:none; }

    @media (max-width: 480px){
      .page-title{ font-size: 34px; }
      .card-text{ padding-right: 0; }
      .badge{ position: static; margin-left:auto; align-self:flex-start; }
      .future-card{ gap: 12px; }
    }
  </style>
</Layout>
