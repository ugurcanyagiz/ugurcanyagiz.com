    .stack{ display:flex; flex-direction:column; gap: 10px; }

    .callout{
      padding: 12px 14px;
      border-radius: 16px;
      background: rgba(245,245,247,0.85);
      border: 1px solid rgba(0,0,0,0.06);
    }
    .callout h4{ margin: 0 0 4px; font-size: 13px; font-weight: 850; letter-spacing: -0.01em; color: rgba(11,11,15,0.86); }
    .callout p{ margin: 0; font-size: 14px; line-height: 1.6; color: rgba(11,11,15,0.62); }

    .figure svg{ width: 100%; height: auto; border-radius: 14px; display:block; overflow:hidden; }
    .figcap{ margin: 0 0 10px; font-size: 13px; color: rgba(11,11,15,0.70); }
    .note{ margin: 10px 0 0; font-size: 13px; line-height: 1.6; color: rgba(11,11,15,0.55); }

    .grid3{ display:grid; grid-template-columns: repeat(3, 1fr); gap: 12px; margin-top: 8px; }
    .mini{
      padding: 12px 14px;
      border-radius: 16px;
      background: rgba(245,245,247,0.70);
      border: 1px solid rgba(0,0,0,0.06);
    }
    .mini h4{ margin: 0 0 6px; font-size: 14px; font-weight: 850; letter-spacing: -0.01em; }
    .mini p{ margin: 0; font-size: 13.5px; line-height: 1.6; color: rgba(11,11,15,0.62); }

    .steps{ margin: 10px 0 0; padding-left: 18px; color: rgba(11,11,15,0.70); line-height: 1.7; font-size: 14px; }

    .faq{ display:flex; flex-direction:column; gap: 10px; }
    details summary{ cursor: pointer; font-weight: 850; font-size: 14px; color: rgba(11,11,15,0.86); list-style: none; }
    details summary::-webkit-details-marker{ display:none; }
    details p{ margin: 10px 0 0; font-size: 14px; line-height: 1.7; color: rgba(11,11,15,0.62); }

    .footnav{ margin-top: 28px; display:flex; justify-content: space-between; gap: 12px; }
    .btn{
      display:inline-flex; align-items:center; justify-content:center;
      padding: 10px 12px; border-radius: 999px;
      border: 1px solid rgba(0,0,0,0.10);
      background: rgba(255,255,255,0.90);
      font-size: 13px; font-weight: 750;
      color: rgba(11,11,15,0.84);
      text-decoration:none;
      transition: transform .15s ease, background .15s ease;
      white-space: nowrap;
    }
    .btn:hover{ transform: translateY(-1px); background: rgba(255,255,255,1); }
    .btn--ghost{ background: rgba(245,245,247,0.75); }

    @media (max-width: 900px){
      .hero-grid{ grid-template-columns: 1fr; }
      .two-col{ grid-template-columns: 1fr; }
      .grid3{ grid-template-columns: 1fr; }
    }
    @media (max-width: 480px){
      h1{ font-size: 34px; }
      .footnav{ flex-direction: column; }
      .btn{ width: 100%; }
    }
  </style>
